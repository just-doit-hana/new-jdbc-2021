<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/api*</pattern>
    </excludes>
    
    <!-- apply Sitemesh default template -->
    <decorator name="admin" page="/src1/main/webapp/decorators/admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>
    
    <decorator name="web" page="/src1/main/webapp/decorators/web.jsp">
        <pattern>/*</pattern>
    </decorator>
    
   <decorator name="login" page="login.jsp">
        <pattern>/dang-nhap</pattern>
    </decorator>
</decorators>